<h2>{{post.title}}</h2>
<p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
<p>{{post.content}}</p>

<h3>Comments</h3>

{{#each post.comments}}
  <p>{{this.user.username}} said: {{this.comment_text}}</p>
{{/each}}

{{#if logged_in}}
  <textarea id="comment-text"></textarea>
  <button id="submit-comment">Add Comment</button>
{{/if}}
